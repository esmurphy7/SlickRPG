    private void EquipmentLabelMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_EquipmentLabelMouseClicked
        EquipmentMenu equipmenu = new EquipmentMenu();
        equipmenu.setBounds(this.getX(), this.getY(), this.getWidth(), this.getHeight());
        
        equipmenu.setVisible(true);
        equipmenu.setFocusable(true);
        equipmenu.requestFocusInWindow();
        equipmenu.getRootPane().setWindowDecorationStyle(JRootPane.NONE);
        
        
    }//GEN-LAST:event_EquipmentLabelMouseClicked

    private void MenuPanelKeyPressed(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_MenuPanelKeyPressed
        if(evt.getKeyCode() == evt.VK_ESCAPE){
            System.out.println("ESCAPE PRESSED");
            this.setVisible(false);
            this.dispose();
        }
    }//GEN-LAST:event_MenuPanelKeyPressed

    private void InventoryLabelMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_InventoryLabelMouseClicked
