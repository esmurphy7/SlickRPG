
package RPG.Items;

import org.newdawn.slick.Image;
import org.newdawn.slick.SlickException;
import org.newdawn.slick.SpriteSheet;

public class MyItem {
    
    private Image icon;
    private SpriteSheet itemsheet;
    private int xTile;
    private int yTile;
    
    
    public MyItem() throws SlickException{
        this.itemsheet = new SpriteSheet(new Image("data/images/item_sheet.png"), 32, 32, 2, 3);
    }
    
    public Image getIcon() {
        return icon;
    }
    public void setIcon(Image icon) {
        this.icon = icon;
    }
    public int getxTile() {
        return xTile;
    } 
    public void setxTile(int xTile) {
        this.xTile = xTile;
    }
    public int getyTile() {
        return yTile;
    }
    public void setyTile(int yTile) {
        this.yTile = yTile;
    }
    public SpriteSheet getItemSheet(){
        return this.itemsheet;
    }
    public void setItemSheet(SpriteSheet ss){
        this.itemsheet=ss;
    }
    
}
